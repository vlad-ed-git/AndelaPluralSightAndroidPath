<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="book"
            type="com.bob.booksapp.Books" />
    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BookDetailsActivity">



<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/book_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@{book.title}"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/book_subtitle_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_title_tv"
        android:text="@{book.subtitle}"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/book_cover_iv"
        android:layout_width="190dp"
        android:layout_height="196dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/icons_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_subtitle_tv"
        app:srcCompat="@drawable/book_open" />

    <TextView
        android:id="@+id/book_authors_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_cover_iv"
        app:layout_constraintTop_toBottomOf="@+id/book_subtitle_tv"
        android:text="@{book.authors}"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/book_publisher_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_cover_iv"
        app:layout_constraintTop_toBottomOf="@+id/book_authors_tv"
        android:text="@{book.publisher}"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/book_published_date_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/book_cover_iv"
        app:layout_constraintTop_toBottomOf="@+id/book_publisher_tv"
        android:text="@{book.publishedDate}"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/book_description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/book_cover_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@{book.description}"
        android:textSize="16sp"/>

</android.support.constraint.ConstraintLayout>


</ScrollView>

</layout>