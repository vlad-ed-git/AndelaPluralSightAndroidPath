<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/medium_margin">

    <ImageView
        android:id="@+id/travel_deal_iv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/app_images"/>

    <TextView
        android:id="@+id/travel_deal_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_clickable"
        app:layout_constraintStart_toEndOf="@id/travel_deal_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/medium_txt"
        android:layout_marginStart="@dimen/std_margin"/>

    <TextView
        android:id="@+id/travel_deal_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_clickable"
        app:layout_constraintStart_toEndOf="@id/travel_deal_iv"
        app:layout_constraintTop_toBottomOf="@id/travel_deal_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/std_txt"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_marginStart="@dimen/std_margin"/>

    <TextView
        android:id="@+id/travel_deal_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/small_clickable"
        app:layout_constraintTop_toBottomOf="@id/travel_deal_desc_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/std_txt"
        android:layout_marginTop="@dimen/std_margin"
        android:textColor="@color/colorAccent"/>

</androidx.constraintlayout.widget.ConstraintLayout>